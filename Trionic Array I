class Solution:
    def isTrionic(self, nums: List[int]) -> bool:
        n = len(nums)

        # Step 1: first increasing
        i = 0
        while i + 1 < n and nums[i] < nums[i + 1]:
            i += 1
        if i == 0:
            return False  # no increasing part at start

        # Step 2: decreasing
        j = i
        while j + 1 < n and nums[j] > nums[j + 1]:
            j += 1
        if j == i or j == n - 1:
            return False  # no decreasing part or no room for third part

        # Step 3: third increasing
        while j + 1 < n and nums[j] < nums[j + 1]:
            j += 1

        return j == n - 1
