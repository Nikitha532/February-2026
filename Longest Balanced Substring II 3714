class Solution:
    def longestBalanced(self, s: str) -> int:
        n = len(s)
        max_len = 0
        
        for i in range(n):
            count = {'a': 0, 'b': 0, 'c': 0}
            
            for j in range(i, n):
                count[s[j]] += 1
                
                # Get frequencies of characters that appear
                freqs = [v for v in count.values() if v > 0]
                
                # Check if all non-zero frequencies are equal
                if len(set(freqs)) == 1:
                    max_len = max(max_len, j - i + 1)
        
        return max_len
