class Solution:
    def findTheLongestBalancedSubstring(self, s: str) -> int:
        prev = 0
        curr = 0
        ans = 0
        
        for i in range(len(s)):
            if s[i] == '1':
                curr += 1
            else:
                prev = curr
                curr = 0
            
            ans = max(ans, 2 * min(prev, curr))
        
        return ans
